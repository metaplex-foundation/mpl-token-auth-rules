        "figlet": "^1.5.2",
        "fs": "^0.0.1-security",
        "log-level": "^1.1.0",
        "loglevel": "^1.8.0",
        "path": "^0.12.7",
        "typescript": "^4.8.2",
        "yaml": "^2.1.3"
    },
    "devDependencies": {
        "@types/clear": "^0.1.2",
        "@types/figlet": "^1.5.5",
        "nodemon": "^2.0.19",
        "ts-node": "^10.9.1"
